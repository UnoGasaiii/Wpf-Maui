<Window x:Class="LR5.Wpf.ElectronicShop_Kharisov_.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:entities ="clr-namespace:LR5.Wpf.ElectronicShop_Kharisov_.Entities"
        xmlns:local="clr-namespace:LR5.Wpf.ElectronicShop_Kharisov_"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="400">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="50" />
            <RowDefinition />
        </Grid.RowDefinitions>
        
        <TextBlock HorizontalAlignment="Center" Text="Toвары магазина злектроники" />
        <Button
            Grid.Row="1"
            Margin="5"
            Click="OpenAddProductWindow"
            Content="Добавить товар" />
        <ListView
            x:Name="ProductsLV"
            Grid.Row="2"
            SelectionChanged="GoToEditProductWindow"
            SelectionMode="Single">
            <ListView.ItemTemplate>
               <DataTemplate DataType="{x:Type entities:ProductEntity}">
                  <StackPanel>
                    <TextBlock Text="{Binding Id, StringFormat=Идентификатор: {0}}" />
                    <TextBlock Text="{Binding Title, StringFormat=зaголoвoк: {0}}" />
                    <TextBlock Text="{Binding Description, StringFormat=Опиcaние: {0}}" />
                    <TextBlock Text="{Binding Amount, StringFormat=Ocтaлocь: {0}}" />
                  </StackPanel>
               </DataTemplate>
            </ListView.ItemTemplate>
         </ListView>
    </Grid>
</Window>
